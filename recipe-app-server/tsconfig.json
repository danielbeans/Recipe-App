{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noImplicitAny": false,
    "strict": true,
    "watch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
